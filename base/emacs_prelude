;; Generate PID File
(setq pidfile ".emacs.pid")
(add-hook 'emacs-startup-hook
          (lambda ()
            (with-temp-file pidfile
              (insert (number-to-string (emacs-pid))))))
(add-hook 'kill-emacs-hook
          (lambda ()
            (when (file-exists-p pidfile)
              (delete-file pidfile))))
(set-face-attribute 'default nil :height 100)

(load "~/.emacs")
